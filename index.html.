<script>
  // --------- Th√®me auto + bascule ----------
  const prefersDark = window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches;
  const saved = localStorage.getItem('econya_theme');
  const theme = saved || (prefersDark ? 'dark' : 'light');
  document.documentElement.setAttribute('data-theme', theme==='dark'?'dark':'light');
  const btn = document.getElementById('themeBtn');
  function setBtnLabel(){
    const isDark = document.documentElement.getAttribute('data-theme')!=='light';
    btn.textContent = isDark ? 'üåô Mode sombre' : '‚òÄÔ∏è Mode clair';
  }
  setBtnLabel();
  btn.onclick = () => {
    const current = document.documentElement.getAttribute('data-theme');
    const next = current==='light' ? 'dark' : 'light';
    document.documentElement.setAttribute('data-theme', next==='dark'?'dark':'light');
    localStorage.setItem('econya_theme', next);
    setBtnLabel();
  };

  // --------- Montant en devise locale ----------
  const currencyByRegion = {
    FR:'EUR', BE:'EUR', LU:'EUR', DE:'EUR', ES:'EUR', IT:'EUR', PT:'EUR',
    NL:'EUR', IE:'EUR', AT:'EUR', FI:'EUR', GR:'EUR',
    US:'USD', GB:'GBP', CA:'CAD', CH:'CHF', JP:'JPY', MA:'MAD', AE:'AED',
    DZ:'DZD', TN:'TND', SN:'XOF', CI:'XOF', ML:'XOF', BF:'XOF', NE:'XOF', TG:'XOF', BJ:'XOF',
    CM:'XAF', GA:'XAF', CG:'XAF', TD:'XAF', GQ:'XAF', CF:'XAF'
  };
  const locale = navigator.language || 'fr-FR';
  const regionMatch = locale.match(/[-_](\w{2})$/);
  const region = regionMatch ? regionMatch[1].toUpperCase() : 'FR';
  const currency = currencyByRegion[region] || 'EUR';
  // D√©mo : 125.5
  const amount = 125.5;
  const formatted = new Intl.NumberFormat(locale, { style:'currency', currency }).format(amount);
  document.getElementById('kpi').innerHTML = `Gr√¢ce √† vos actions, vous avez √©conomis√© <strong>${formatted}</strong>`;

  // --------- Petites feuilles "confetti" ----------
  const stage = document.getElementById('stage');
  function spawnLeaf(){
    const el = document.createElement('div');
    el.className = 'leaf';
    el.style.left = (120 + (Math.random()*60-30)) + 'px';
    el.style.top  = (90 + (Math.random()*30-10)) + 'px';
    el.style.setProperty('--dx', (Math.random()*60-30) + 'px');
    stage.appendChild(el);
    setTimeout(()=>el.remove(), 1700);
  }
  // Lance quelques feuilles pendant la croissance
  let bursts = 0;
  const confetti = setInterval(()=>{
    bursts++;
    for(let i=0;i<3;i++) spawnLeaf();
    if(bursts>6) clearInterval(confetti);
  }, 400);

  // Ann√©e pied de page
  document.getElementById('year').textContent = new Date().getFullYear();
</script>
